{
    // Python formatting.
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "120"
    ],
    // Python linting.
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=120",
        "--ignore=E402"
    ],
    "files.associations": {
        "[Dd]ockerfile*": "dockerfile",
        "docker-compose*": "yaml",
        "ios": "cpp",
        "cassert": "cpp",
        "unordered_map": "cpp",
        "map": "cpp",
        "vector": "cpp",
        "iosfwd": "cpp",
        "__hash_table": "cpp",
        "__split_buffer": "cpp",
        "__tree": "cpp",
        "array": "cpp",
        "bitset": "cpp",
        "deque": "cpp",
        "initializer_list": "cpp",
        "list": "cpp",
        "queue": "cpp",
        "regex": "cpp",
        "set": "cpp",
        "stack": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "unordered_set": "cpp",
        "valarray": "cpp"
    },
    // Editor.
    "editor.renderWhitespace": "all",
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.tabSize": 2
    },
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    // Additional extensions settings
    "todohighlight.keywordsPattern": "(TODO|FIXME)",
    "python.pythonPath": "/home/vitalii/code/competitions/.venv/bin/python3"
}
